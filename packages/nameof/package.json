{
	"name": "@gtsc/nameof",
	"version": "0.0.1",
	"description": "Framework nameof TypeScript types package for GTSC",
	"repository": {
		"type": "git",
		"url": "https://github.com/gtscio/framework.git",
		"directory": "packages/nameof"
	},
	"author": "martyn.janes@iota.org",
	"license": "Apache-2.0",
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"clean": "rimraf dist coverage",
		"build": "tsc",
		"package": "rollup --config rollup.config.js",
		"docs:clean": "rimraf dist/docs",
		"docs:generate": "typedoc",
		"docs:copy": "copyfiles -u 1 docs/**/* dist/docs",
		"docs": "npm run docs:clean && npm run docs:generate && npm run docs:copy",
		"dist": "npm run clean && npm run build && npm run test && npm run package && npm run docs",
		"test": "vitest --run --coverage --config ./vitest.config.ts"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^25.0.7",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"rimraf": "^5.0.5",
		"rollup": "^4.12.1",
		"typedoc": "^0.25.11",
		"typedoc-plugin-markdown": "^3.17.1",
		"typescript": "^5.3.3"
	},
	"main": "./dist/cjs/index.cjs",
	"module": "./dist/esm/index.js",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/cjs/index.cjs",
			"import": "./dist/esm/index.js",
			"types": "./dist/types/index.d.ts"
		}
	},
	"files": [
		"dist"
	]
}
