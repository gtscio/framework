{
	"compilerOptions": {
		"module": "NodeNext",
		"outDir": "dist/esm",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"stripInternal": true,
		"noEmitHelpers": true,
		"sourceMap": true,
		"sourceRoot": "./src",
		"declaration": true,
		"declarationDir": "dist/types",
		"plugins": [{ "transform": "@gtsc/nameof-transformer" }]
	},
	"include": ["src/**/*.ts"]
}
