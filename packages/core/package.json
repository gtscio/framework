{
	"name": "@gtsc/core",
	"version": "0.0.1",
	"description": "Framework Core packages for GTSC",
	"repository": {
		"type": "git",
		"url": "https://github.com/gtscio/framework.git",
		"directory": "packages/core"
	},
	"author": "martyn.janes@iota.org",
	"license": "Apache-2.0",
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"clean": "rimraf dist coverage",
		"build": "tspc",
		"test": "vitest --run --coverage --config ./vitest.config.ts",
		"bundle:esm": "rollup --config rollup.config.js --environment MODULE:esm",
		"bundle:cjs": "rollup --config rollup.config.js --environment MODULE:cjs",
		"bundle": "npm run bundle:esm && npm run bundle:cjs",
		"docs:clean": "rimraf dist/docs",
		"docs:generate": "typedoc",
		"docs:copy": "copyfiles -u 1 docs/**/* dist/docs",
		"docs": "npm run docs:clean && npm run docs:generate && npm run docs:copy",
		"dist": "npm run clean && npm run build && npm run test && npm run bundle && npm run docs"
	},
	"dependencies": {
		"@gtsc/nameof": "^0.0.1",
		"intl-messageformat": "^10.5.11",
		"luxon": "^3.4.4",
		"strip-json-comments": "^5.0.1"
	},
	"devDependencies": {
		"@gtsc/nameof-transformer": "^0.0.1",
		"@types/luxon": "^3.4.2",
		"@vitest/coverage-v8": "^1.3.1",
		"copyfiles": "^2.4.1",
		"rimraf": "^5.0.5",
		"rollup": "^4.12.1",
		"rollup-plugin-typescript2": "^0.36.0",
		"ts-patch": "^3.1.2",
		"typedoc": "^0.25.11",
		"typedoc-plugin-markdown": "^3.17.1",
		"typescript": "^5.3.3",
		"vitest": "^1.3.1"
	},
	"main": "./dist/cjs/index.cjs",
	"module": "./dist/esm/index.mjs",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/cjs/index.cjs",
			"import": "./dist/esm/index.mjs",
			"types": "./dist/types/index.d.ts"
		},
		"./locales": "./locales"
	},
	"files": [
		"dist/cjs",
		"dist/docs",
		"dist/esm",
		"dist/types",
		"locales",
		"CHANGELOG.md"
	]
}
